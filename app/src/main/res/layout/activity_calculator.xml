<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Calculator"
    android:id="@+id/Calculator">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/button3"
        android:height="80dp"
        android:width="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button18" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button4"
        android:height="80dp"
        android:width="60dp"
        android:layout_alignTop="@+id/button14"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button5"
        android:height="80dp"
        android:width="60dp"
        android:layout_below="@+id/button7"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button7"
        android:height="80dp"
        android:width="60dp"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button8"
        android:height="80dp"
        android:width="60dp"
        android:layout_below="@+id/button16"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button9"
        android:height="80dp"
        android:width="60dp"
        android:layout_below="@+id/button16"
        android:layout_toEndOf="@+id/button18" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button10"
        android:height="80dp"
        android:width="60dp"
        android:layout_above="@+id/button7"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button13"
        android:height="80dp"
        android:width="60dp"
        android:layout_above="@+id/button9"
        android:layout_toStartOf="@+id/button14" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/button14"
        android:height="160dp"
        android:width="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button16"
        android:height="80dp"
        android:width="60dp"
        android:layout_below="@+id/button18"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/button15"
        android:height="80dp"
        android:width="60dp"
        android:layout_alignTop="@+id/button13"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/button17"
        android:height="80dp"
        android:width="60dp"
        android:layout_below="@+id/button15"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Albert Mode"
        android:id="@+id/button18"
        android:height="80dp"
        android:width="60dp"
        android:layout_above="@+id/button10"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button13" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button20"
        android:height="80dp"
        android:width="60dp"
        android:layout_above="@+id/button13"
        android:layout_toStartOf="@+id/button15" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button21"
        android:height="80dp"
        android:width="60dp"
        android:layout_alignTop="@+id/button20"
        android:layout_toEndOf="@+id/button20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:height="100dp"
        android:width="350dp"
        android:textSize="80dp"
        android:textStyle="bold"
        android:background="#ff000000"
        android:textColor="#ffff001e"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button"
        android:height="80dp"
        android:width="180dp"
        android:layout_below="@+id/button4"
        android:layout_toStartOf="@+id/button5"
        android:layout_alignEnd="@+id/button18" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button2"
        android:height="80dp"
        android:width="60dp"
        android:layout_below="@+id/button8"
        android:layout_toEndOf="@+id/button" />
</RelativeLayout>
